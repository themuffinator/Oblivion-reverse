{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake: configure win32",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/win32",
        "-A",
        "Win32",
        "-DCMAKE_BUILD_TYPE=Release"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "cmake: configure win32 debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build/win32",
        "-A",
        "Win32",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "cmake: build win32",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build/win32",
        "--config",
        "Release"
      ],
      "dependsOn": [
        "cmake: configure win32"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cmake: build win32 debug",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build/win32",
        "--config",
        "Debug"
      ],
      "dependsOn": [
        "cmake: configure win32 debug"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "pytest: spawn manifest",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "pytest",
        "tests/test_spawn_manifest.py"
      ],
      "problemMatcher": "$pythonTest"
    }
  ]
}
