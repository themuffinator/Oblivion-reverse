{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Quake2 (oblivion-re)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "C:\\q2Clean\\Quake2.exe",
      "args": [
        "+set",
        "basedir",
        "C:\\q2Clean",
        "+set",
        "game",
        "oblivion-re"
      ],
      "cwd": "C:\\q2Clean",
      "stopAtEntry": false
    },
    {
      "name": "Attach to process (cppvsdbg)",
      "type": "cppvsdbg",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Python: pytest spawn manifest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/test_spawn_manifest.py"
      ],
      "console": "integratedTerminal"
    }
  ]
}
